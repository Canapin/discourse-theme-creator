<div class="user-theme-creator">
  {{#unless editingTheme}}
  <div class='content-list theme-list'>
    <h3>{{i18n 'theme-creator.my_themes'}}</h3>
    <ul>
      {{#each model as |theme|}}
        <li>
          {{#link-to 'user.themes.show' theme replace=true}}
            {{theme.name}}
          {{/link-to}}
        </li>
      {{/each}}
    </ul>

    {{d-button label="theme-creator.new_theme" icon="plus" action="newTheme" class="btn-primary"}}
    {{d-button action="importModal" icon="upload" label="admin.customize.import"}}
  </div>
  {{/unless}}
  <div class="theme-details">
  {{outlet}}
  </div>
</div>
