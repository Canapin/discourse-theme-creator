<div class="user-theme-creator">
  {{#unless editingTheme}}
  <div class='content-list theme-list'>
    <h3>{{i18n 'theme_creator.my_themes'}}</h3>
    <ul>
      {{#each model as |theme|}}
        <li>
          {{#link-to 'user.themes.show' theme replace=true}}
            {{theme.name}}
          {{/link-to}}
        </li>
      {{/each}}
    </ul>
    <p>{{d-button label="theme_creator.new_theme" icon="plus" action="newTheme" class="btn-primary"}}</p>
    <p>{{d-button action="importModal" icon="upload" label="admin.customize.import"}}</p>
    
  </div>
  {{/unless}}
  <div class="theme-details">
  {{outlet}}
    <hr/>
    <p>{{d-button action="editLocalModal" icon="pencil" label="theme_creator.edit_local"}}</p>
    <a href='{{previewUrl}}' title="{{i18n 'theme_creator.explain_preview'}}" target='_blank' class='btn'>{{d-icon 'desktop'}}{{i18n 'theme_creator.preview'}}</a>
    {{d-button action="shareModal" label="theme_creator.share" icon="users" class="btn"}}
    {{d-button action="destroy" label="theme_creator.delete" icon="trash" class="btn-danger"}}
  </div>
</div>
